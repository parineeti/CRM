﻿
@{
    ViewBag.Title = "Job type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CRM.Database.tbljobType
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Edit @Model.Name Details</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("jobtypelist","job")">Jobs</a></li>
            <li class="breadcrumb-item active">Type</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card card-body">

            @if (ViewData["error"] != null)
            {
                <div class="alert alert-success alert-rounded">
                    @ViewData["error"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
            }
            @using (Html.BeginForm("edittype", "job", FormMethod.Post, new { @class = "form-horizontal m-t-40" }))
            {
                <div class="form-group">
                    <label>Type Name</label>
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @placeholder = "Enter jobType Name", @required = "required" })
                    @Html.HiddenFor(a => a.Id)
                </div>
                <div class="form-group">
                    <label for="example-email">Descriptiom </label>
                    @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @rows = "6", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="Active"> </label>
                    <div class="form-check">
                        <label class="custom-control custom-checkbox">
                            @Html.CheckBoxFor(a => a.IsActive.Value, new { @class = "custom-control-input" })
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description">Is Active</span>
                        </label>
                    </div>

                </div>
                <input type="hidden" name="IsActive" value="@(Model.IsActive.Value==true?"true":"false")" id="chk" />

                <div class="form-group">
                    <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Save</button>
                    <a href="@Url.Action("jobtypelist","job")" class="btn btn-inverse waves-effect waves-light">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(".custom-control-input").on("click",function(){
        var _val = $("#chk").val();
        if(_val=="True"||_val=="true")
        {
            $("#chk").val(false);
        }else
        {
            $("#chk").val(true);
        }
    });
</script>