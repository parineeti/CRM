
@{
    ViewBag.Title = "labels";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CRM.Models.Labelitem
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Add New Label</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("dashboard","login")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("labellist","Contact")">LabelList</a></li>
            <li class="breadcrumb-item active">Label</li>
        </ol>
    </div> 
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card card-body">
            
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-success alert-rounded">
                    @Model.Error
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                </div>
            }  
            @using (Html.BeginForm("labels", "contact", FormMethod.Post, new { @class = "form-horizontal m-t-40" }))
            {
                <div class="form-group">
                    <label>Label Name</label>
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @placeholder = "Enter Label Name", @required = "required" })
                </div>
                <div class="form-group">
                    <label for="example-email">Description </label>
                    @Html.TextAreaFor(a => a.description, new { @required = "required", @class = "form-control", @placeholder = "Enter Label Description", @rows = "6" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Save</button>
                    <a href="@Url.Action("labellist","contact")" class="btn btn-inverse waves-effect waves-light">Cancel</a>
                </div>
            }
            </div>
        </div>
    </div>
