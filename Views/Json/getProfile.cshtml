@model CRM.Models.profile
@{  var imgSrc = "";
    if (!string.IsNullOrEmpty(Model.image))
    {

        imgSrc = Url.Content("~" + Model.image);
    }
    else
    {
        imgSrc = Url.Content("~/assets/images/icon/staff.png");
    }
}

<li class="nav-item hidden-xs-down search-box">
    <a class="nav-link hidden-sm-down waves-effect waves-dark" href="javascript:void(0)">
        <span>Welcome <b> @Model.name </b></span>
    </a>
</li> 
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle waves-effect waves-dark" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="@imgSrc" alt="user" class="profile-pic" /></a>
    <div class="dropdown-menu dropdown-menu-right animated flipInY">
        <ul class="dropdown-user">
            <li>
                <div class="dw-user-box">
                    <div class="u-img"><img src="@imgSrc" alt="user"></div>
                    <div class="u-text">
                        <h4>@Model.name</h4>
                        <p class="text-muted">@Model.Email</p><a href="@Url.Action("Myprofile","home")" class="btn btn-rounded btn-danger btn-sm">View Profile</a>
                    </div>
                </div>
            </li>
            <li role="separator" class="divider"></li>
            <li><a href="@Url.Action("Myprofile","home")"><i class="ti-user"></i> My Profile</a></li> 
            <li role="separator" class="divider"></li>
            <li><a href="@Url.Action("Index","login")"><i class="fa fa-power-off"></i> Logout</a></li>
        </ul>
    </div>
</li>
